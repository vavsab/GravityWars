<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vavsab.gravitywars"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vavsab.gravitywars.game.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="vavsab.gravitywars.menu.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vavsab.gravitywars.menu.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="vavsab.gravitywars.menu.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="vavsab.gravitywars.menu.RoundOptionsActivity"
            android:label="@string/title_activity_round_options" >
        </activity>
    </application>

</manifest>